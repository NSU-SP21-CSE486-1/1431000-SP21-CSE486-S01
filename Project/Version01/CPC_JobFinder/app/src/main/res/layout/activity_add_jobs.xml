<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    //tools:context=".AddFoodItemsFrag"



    <EditText
        android:id="@+id/PositionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Job Position"
        android:inputType="textPersonName"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/JobDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PositionName"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Job Detail"
        android:inputType="textPersonName"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/JobType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/JobDetail"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Job Type"
        android:inputType="textPersonName"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/SalaryRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/JobType"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Salary"
        android:inputType="textPersonName"
        android:textColor="@color/black" />


    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/SalaryRange"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>
    //android:src="@drawable/ic_baseline_image_24"
    />


    <Button
        android:id="@+id/UploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemImageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/teal_200"
        android:text="Upload Image"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/itemSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UploadImage"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/purple_700"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemSubmitBtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/purple_500"
        android:text="UPDATE"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>